// Colors
:root
  /* Reds converted to dark magenta */
  --red-0: #c13cd3;    /* Base magenta */
  --red-1: #cb5bd9;    /* First light step */
  --red-2: #d27adf;    /* Mid-light */
  --red-3: #e099e5;    /* Balanced lightness */
  --red-4: #eab8eb;    /* Soft pastel */
  --red-5: #f4d7f1;    /* Very light */
  --red-5-5: #f9e7f4;  /* Subtle tint */
  --red-6: #fff7f7;    /* Near-white */

  /* Adjusted Neutrals */
  --grey-9: #8c7a8f;    /* Desaturated magenta (original #888) */
  --grey-7: var(--color-default)

  /* Contextual Colors */
  --color-archive-year: black
  --color-default: #5d4d60;        /* Warm grey (original #555) */
  --color-border: var(--red-3)
  --color-link: var(--red-1)
  --color-background: #f5eef6;     /* Pale magenta tint */
  --color-code-background: #f8f3f9; /* Warmer light gray */
  --color-header-background: rgba(245, 238, 246, 0.9) /* Semi-transparent background */
  --color-footer-background: #fff
  --color-mobile-nav-background: #fff
  --color-wrap: #fff
  --color-sticky: #fff

  /* Secondary Interface Colors */
  --color-h2-border: #eee
  --color-meta-shadow: var(--red-6)
  --color-hover-shadow: rgba(193, 60, 211, 0.1)  /* Magenta-tinted shadow */
  --color-h2-after: var(--red-1)
  --color-red-6-shadow: rgba(211, 78, 211, 0.6)
  --color-red-3-shadow: rgba(211, 78, 211, 0.3)

  /* Adjusted Highlight Colors */
  --highlight-nav: #ede2ef          /* Light magenta tint */
  --highlight-scrollbar: #e0d0e3    /* Medium magenta tint */
  --highlight-background: #f7f7f7
  --highlight-current-line: #ead0ee /* Subtle magenta accent */
  --highlight-selection: #f0e0f2
  --highlight-foreground: #5d4d60   /* Matching --color-default */
  --highlight-comment: #8c7a8f      /* Matching --grey-9 */
  --highlight-red: #d93c6b;      /* Magenta-tinged red */
  --highlight-orange: #cc5c3c;   /* Warm terracotta */
  --highlight-yellow: #d3aa3c;   /* Golden yellow */
  --highlight-green: #4d994d;    /* Muted sage green */
  --highlight-aqua: #4d8d9d;     /* Dusty teal */
  --highlight-blue: #6b8cd3;     /* Periwinkle blue */
  --highlight-purple: #8c5bd9;   /* Violet sibling */

  --cursor-default: url(cursor-default), auto
  --cursor-pointer: url(cursor-pointer), pointer
  --cursor-text: url(cursor-text), text
  --footer-icon: url(footer-icon)
  --sponsor-icon: url(sponsor-icon)
  --top-icon: url(top-icon)
[data-theme="dark"]
  &:root
    --red-0: var(--red-1)
    --red-4: rgba(235,184,235,0.5)   /* Adjusted opacity */
    --red-5: rgba(244,215,241,0.15)
    --red-5-5: rgba(249,231,244,0.05)
    --red-6: rgba(255,247,247,0.2)

    --color-archive-year: #c9b0cc
    --color-default: #c9b0cc        /* Light lavender gray */
    --color-border: var(--red-5)
    --color-background: #1f1720     /* Deep aubergine */
    --color-code-background: rgba(40,35,41,0.5)
    --color-header-background: #2a1f2c
    --color-footer-background: #1f1720
    --color-mobile-nav-background: #1f1720
    --color-wrap: #2d222f

    --color-h2-border: #3d3440
    --color-meta-shadow: rgba(25, 12, 27, 0.4)
    --color-hover-shadow: rgba(25, 12, 27, 0.4)

    /* Dark Theme Highlights */
    --highlight-nav: #38293d
    --highlight-scrollbar: #4d3d52
    --highlight-background: #1f1720
    --highlight-current-line: #443548
    --highlight-selection: #4d3d52
    --highlight-foreground: #c9b0cc
    --highlight-comment: #8c7a8f
    --highlight-red: #ff6392;      /* Vibrant pink-red */
    --highlight-orange: #ff8c63;   /* Coral */
    --highlight-yellow: #ffd700;   /* Gold */
    --highlight-green: #88cc88;    /* Soft mint */
    --highlight-aqua: #63cccc;     /* Bright teal */
    --highlight-blue: #7aa7ff;     /* Electric blue */
    --highlight-purple: #b28cff;   /* Lavender */
    img
      filter: brightness(70%)

    // 排除lightbox
    .pswp__img
      opacity: 1
      filter: none
      animation: none

    img.lazyloaded
      opacity: 1
      animation: blur-darken 0.8s ease-in-out forwards

// Fonts
font-basic = unquote(article-families) unquote(local-article-families)
font-code = unquote(code-families) unquote(local-code-families)

font-size = 14px
line-height = 1.8em
line-height-title = 1.2em

// Header
logo-size = 40px
subtitle-size = 18px
banner-height = 35vh

sidebar = postHasSidebar || hexo-config("sidebar")
reimu_cursor = cursor-enabled

// Layout
block-margin = 50px
article-padding = 20px
mobile-nav-width = 280px

// Media queries
mq-mobile = "screen and (max-width: 479px)"
no-mobile = "screen and (min-width: 480px)"
mq-tablet = "screen and (min-width: 480px) and (max-width: 767px)"
mq-normal = "screen and (min-width: 768px)"
mg-normal = "screen and (max-width: 767px)"
mq-large = "screen and (min-width: 960px)"
mg-large = "screen and (max-width: 959px)"

post-radius = 10px
